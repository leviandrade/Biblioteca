@model  Biblioteca.Models.Livros

@{
    ViewBag.Title = "Editar";
}
<form action="@Url.Action("Salvar")" method="post" class="w3-container w3-card-4">

    <input type="hidden" name="id" value="@Model.id" />

    <p>
        <label>Nome:</label>
        <input class="w3-input" type="text" name="Nome" value="@Model.Nome" />
    </p>
    <p>
        <label>ISBN:</label>
        <input class="w3-input" type="text" name="ISBN" value="@Model.ISBN" />
    </p>
    <p>
        <label>Data Publicação:</label>
        <input class="w3-input" type="date" name="DataPublicacao" value="@Model.DataPublicacao" />
    </p>
    <p>
        <label>Preço:</label>
        <input class="w3-input" type="text" name="Preco" value="@Model.Preco" />
    </p>
    <p>
        <label>id Editora:</label>
        <input class="w3-input" type="number" name="idEditora" value="@Model.idEditora" />
    </p>
    <p>
        <label>id Autor:</label>
        <input class="w3-input" type="number" name="idAutor" value="@Model.idAutor" />
    </p>

    <input type="submit" value="Enviar" class="w3-button w3-section w3-teal w3-ripple" />

</form>
